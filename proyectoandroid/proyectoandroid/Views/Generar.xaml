        <Label Grid.Column="3" Grid.Row="2" Text="Raza:Hipotido"  Grid.ColumnSpan="2" class="texto"/>





        <BoxView Grid.Column="0" class="containern"/>
        

        <Label Text="FUE" Grid.Column="0" Grid.Row="3" class="stat"/>
        <Label Text="+5"  Grid.Column="0" Grid.Row="3" class="stat2"/>
        <Label Text="20"  Grid.Column="0" Grid.Row="3" class="stat3"/>
       
           
        <BoxView Grid.Column="1" class="containern"/>
        <Label Text="DES" Grid.Column="1" Grid.Row="3" class="stat" />
        <Label Text="+5" Grid.Column="1" Grid.Row="3" class="stat2"/>
        <Label Text="20"  Grid.Column="1" Grid.Row="3" class="stat3"  />
        <BoxView Grid.Column="2" class="containern"/>
        <Label Text="CON" Grid.Column="2" Grid.Row="3" class="stat"/>
        <Label Text="+5"  Grid.Column="2" Grid.Row="3" class="stat2"/>
        <Label Text="20"  Grid.Column="2" Grid.Row="3" class="stat3" />
        <BoxView Grid.Column="3" class="containern"/>
        <Label Text="INT" Grid.Column="3" Grid.Row="3" class="stat"/>
        <Label Text="+5"  Grid.Column="3" Grid.Row="3" class="stat2"/>
        <Label Text="20"  Grid.Column="3" Grid.Row="3" class="stat3"  />
        <BoxView Grid.Column="4" class="containern"/>
        <Label Text="SAB" Grid.Column="4" Grid.Row="3" class="stat"/>
