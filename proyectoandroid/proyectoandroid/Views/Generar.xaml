        <Label Text="20"  Grid.Column="5" Grid.Row="3" class="stat3"/>


        <BoxView Grid.Column="0" Grid.Row="4" class="container"/>
        <Label Text="Rasgo:" Grid.Column="0" Grid.Row="4" class="containertext" />
        <Label Text="Ideal:" Grid.Column="0" Grid.Row="5" class="containertext" />
        <Label Text="Vinculo:" Grid.Column="0" Grid.Row="6" class="containertext"  />
        <Label Text="Defecto:" Grid.Column="0" Grid.Row="7" class="containertext"/>
        <Label Text="Objeto:" Grid.Column="0" Grid.Row="9" class="containertext"/>
        <Label Text="Moral:" Grid.Column="0" Grid.Row="8" class="containertext"/>

        <Picker Title="Elige la clase" Grid.Column="1" Grid.Row="10" Grid.ColumnSpan="4" class="Picker">
            <Picker.Items>
                <x:String>Barbaro</x:String>
                <x:String>Bardo</x:String>
                <x:String>Brujo</x:String>
                <x:String>Clerigo</x:String>
                <x:String>Druida</x:String>
                <x:String>Explorador</x:String>
                <x:String>Guerrero</x:String>
                <x:String>Hechicero</x:String>
